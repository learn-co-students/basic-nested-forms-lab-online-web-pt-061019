


<%= form_for @recipe do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br/>

    <%= f.fields_for :ingredients, [Ingredient.new, Ingredient.new] do |ingredients_field| %>
        <%= f.label :name %>
        <%= ingredients_field.text_field :name %>
        <%= f.label :quantity %>
        <%= ingredients_field.text_field :quantity %>
    <% end %>

    <%= f.submit %>
<% end %>

